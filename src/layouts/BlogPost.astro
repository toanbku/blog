---
import { Notion } from '@jcha0713/astro-notion/components';
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';

const { pageData, blocks } = Astro.props;
const { title, description } = pageData.properties;
---

<html lang={'en'}>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/>
		<BaseHead {title} {description} />
	</head>

	<body>
		<BlogHeader />
		<div class="wrapper">
			<BlogPost {title}>
				<Notion {blocks} />
			</BlogPost>

			<script
				src="https://giscus.app/client.js"
				data-repo="toanbku/blog"
				data-repo-id="R_kgDOHjvYZA"
				data-category="Announcements"
				data-category-id="DIC_kwDOHjvYZM4CP3xa"
				data-mapping="title"
				data-reactions-enabled="1"
				data-emit-metadata="1"
				data-input-position="top"
				data-theme="light"
				data-lang="en"
				crossorigin="anonymous"
				async
			/>
		</div>

	</body>
</html>
